<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SyncFragment"
    android:background="#eee8d5 ">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/editTextTextToken"
        android:layout_width="416dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text"
        android:text="Token"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextUsername"
        tools:layout_editor_absoluteX="-3dp" />

    <EditText
        android:id="@+id/editTextTextURL"
        android:layout_width="416dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textUri"
        android:text="URL"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextToken"
        tools:layout_editor_absoluteX="-3dp" />

    <EditText
        android:id="@+id/editTextTextUsername"
        android:layout_width="419dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Username"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_apply"
        android:layout_width="83dp"
        android:layout_height="54dp"
        android:layout_marginTop="68dp"
        android:background="#93a1a1"
        android:text="@string/apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextURL" />

    <Button
        android:id="@+id/button_merge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="80dp"
        android:text="@string/merge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_apply"
        android:background="#93a1a1"/>


</androidx.constraintlayout.widget.ConstraintLayout>