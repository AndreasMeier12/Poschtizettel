<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee8d5 ">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="item name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            tools:layout_editor_absoluteX="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_item_quantity"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:hint="quanitity" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            tools:layout_editor_absoluteX="1dp">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_item_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="unit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_item_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="shop"
            app:layout_constraintTop_toBottomOf="@+id/text_input_item_unit"
            tools:layout_editor_absoluteX="-1dp" />

        <Button
            android:id="@+id/button_confirm_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#859900 "
            android:text="add item"
            app:layout_constraintEnd_toStartOf="@+id/button_back_add_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_input_item_shop" />

        <Button
            android:id="@+id/button_back_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="76dp"
            android:layout_marginRight="76dp"
            android:background="#93a1a1 "
            android:text="back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_input_item_shop" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>